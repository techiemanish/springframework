<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  

<bean id = "address1" class = "Address">
<property name = "street">
<value>R C Colony</value></property>

<property name = "city">
<value>Noida</value></property>

<property name = "state">
<value>UP</value></property>

<property name = "country">
<value>India</value></property>
</bean>

<bean id = "e1" class = "Employee">
<property name = "id" >
<value>51234567</value></property>
<property name = "name">
<value>Manish Tiwari</value></property>
<property name = "designation">
<value>Analyst</value></property>
<property name = "address" ref = "address1"></property>
</bean>

</beans>